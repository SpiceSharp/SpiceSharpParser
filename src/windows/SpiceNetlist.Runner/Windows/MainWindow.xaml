<Window x:Class="SpiceNetlist.Runner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SpiceNetlist.Runner"
        mc:Ignorable="d"
        Title="SpiceNetlist runner (Spice#)" Height="350" Width="525">
    <DockPanel Height="Auto" Name="stackPanel1" Width="Auto" LastChildFill="True">
        <Menu IsMainMenu="True" DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Exit" Click="Exit_Click" />
            </MenuItem>
            <MenuItem Header="_Run" Click="Run_Click"/>
        </Menu>
        <DockPanel Height="Auto" Name="stackPanel2" Width="Auto" >
            <ScrollViewer>
                <TextBox Name="txtEditor" AcceptsReturn="True" />
            </ScrollViewer>
        </DockPanel>
    </DockPanel>

</Window>
